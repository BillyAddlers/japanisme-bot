{
    "extends": "eslint:recommended",
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType":  "module"
        "ecmaFeatures": {
        }
    },
    "plugins": [
      "node", 
      "promise"
    ],
    "rules": {
        "no-console": "off",
        "no-mixed-spaces-and-tabs": "off",
        "semi": "warn",
        "no-unused-vars": "off",
        "no-undef": "warn",
        "no-redeclare": "off",
        "no-useless-escape": "off",
        "no-extra-semi": "warn"
    }
   }